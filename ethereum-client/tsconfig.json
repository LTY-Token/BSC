{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
  },
  "exclude": [
    "client/**/*"
  ],
}
